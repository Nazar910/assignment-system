{
    "compilerOptions": {
        "target": "es5",
        "outDir": "./build",
        "lib": [
            "es6", "dom"
        ],
        "types": [
            "reflect-metadata", "node"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
