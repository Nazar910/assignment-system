{
    "compilerOptions": {
        "target": "es5",
        "outDir": "./build",
        "lib": [
            "es2017",
            "dom"
        ],
        "types": [
            "reflect-metadata",
            "node",
            "mocha"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
